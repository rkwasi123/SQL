INNER JOIN: Retrieve all VIP members and their corresponding events.
SELECT
	vp.member_id
    , vp.last_name
    , vp.first_name
    , ev.event_name
    , ev.event_type
FROM vips vp
INNER JOIN events ev
ON vp.event = ev.event_id;

LEFT JOIN: List all hotels with the number of reservations made.
SELECT 
	h.hotel_name
    , count(r.member_id) AS total_reservations
FROM hotels h
LEFT JOIN reservations r
ON h.hotel_id = r.hotel
GROUP BY h.hotel_name;


INNER JOIN: Find VIP members who RSVPâ€™d for both the welcome and dinner events.
SELECT 
	vp.member_id
    , vp.last_name
    , vp.first_name
FROM vips vp
INNER JOIN reservations r
ON vp.member_id = r.member_id
WHERE r.welcome_rsvp = 1 AND r.dinner_rsvp = 1;


INNER JOIN:Show a list of events and the number of VIP members attending each event.
SELECT
	e.event_name
    , count(vp.member_id) AS total_vips
FROM events e
INNER JOIN vips vp
ON e.event_id = vp.event
GROUP BY e.event_name;


SELF JOIN: Retrieve all VIP members who provided feedback to another VIP member
SELECT
	vp1.first_name || ' ' || vp1.last_name AS vip_name
    , vp2.first_name|| ' ' || vp2.last_name AS provided_feedback_to
FROM vips vp1
INNER JOIN vips vp2
ON vp1.provides_feedback_to = vp2.member_id;


MULTIPLE JOINS: Get all VIP members along with the hotel they are staying in.
SELECT
	vp.first_name
    , vp.last_name
    , h.hotel_name
FROM vips vp
INNER JOIN reservations r ON vp.member_id = r.member_id
INNER JOIN hotels h ON r.hotel = h.hotel_id;


-- Find VIPs who have been members since before 2010.
SELECT
	member_id
    ,first_name
    , last_name
    , member_since
FROM vips 
WHERE member_since < 2010;

